{
  "name": "stata-workbench",
  "displayName": "Stata Workbench",
  "description": "Allows Stata code to be run directly from the IDE. Enables AI agents to directly interact with Stata, powered by mcp-stata.",
  "author": "Thomas Monk",
  "publisher": "tmonk",
  "license": "AGPL-3.0-or-later",
  "homepage": "https://github.com/tmonk/stata-workbench",
  "repository": {
    "type": "git",
    "url": "https://github.com/tmonk/stata-workbench"
  },
  "bugs": {
    "url": "https://github.com/tmonk/stata-workbench/issues"
  },
  "version": "0.3.2",
  "engines": {
    "vscode": "^1.75.0"
  },
  "keywords": [
    "stata",
    "statistics",
    "data science",
    "mcp",
    "ai"
  ],
  "categories": [
    "Programming Languages",
    "Data Science",
    "Machine Learning",
    "Other"
  ],
  "sponsor": {
    "url": "https://github.com/sponsors/tmonk"
  },
  "icon": "img/icon.png",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "stata-workbench.runSelection",
        "title": "Stata: Run Selection/Current Line",
        "icon": "$(play)"
      },
      {
        "command": "stata-workbench.runFile",
        "title": "Stata: Run Current File",
        "icon": "$(run-all)"
      },
      {
        "command": "stata-workbench.testMcpServer",
        "title": "Stata: Test MCP Server Connection"
      },
      {
        "command": "stata-workbench.showGraphs",
        "title": "Stata: Show Graphs",
        "icon": "$(graph)"
      },
      {
        "command": "stata-workbench.installMcpCli",
        "title": "Stata: Install MCP CLI",
        "icon": "$(cloud-download)"
      },
      {
        "command": "stata-workbench.cancelRequest",
        "title": "Stata: Cancel Current Request",
        "icon": "$(debug-stop)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .do || resourceExtname == .ado || resourceExtname == .mata || editorLangId == stata",
          "command": "stata-workbench.runSelection",
          "group": "navigation@1"
        },
        {
          "when": "resourceExtname == .do || resourceExtname == .ado || resourceExtname == .mata || editorLangId == stata",
          "command": "stata-workbench.runFile",
          "group": "navigation@2"
        },
        {
          "when": "resourceExtname == .do || resourceExtname == .ado || resourceExtname == .mata || editorLangId == stata",
          "command": "stata-workbench.showGraphs",
          "group": "navigation@3"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .do || resourceExtname == .ado || resourceExtname == .mata || editorLangId == stata",
          "command": "stata-workbench.runSelection",
          "group": "1_stata"
        },
        {
          "when": "resourceExtname == .do || resourceExtname == .ado || resourceExtname == .mata || editorLangId == stata",
          "command": "stata-workbench.runFile",
          "group": "1_stata"
        },
        {
          "when": "resourceExtname == .do || resourceExtname == .ado || resourceExtname == .mata || editorLangId == stata",
          "command": "stata-workbench.showGraphs",
          "group": "1_stata"
        }
      ]
    },
    "keybindings": [
      {
        "command": "stata-workbench.runSelection",
        "key": "ctrl+shift+enter",
        "mac": "cmd+shift+enter",
        "when": "editorTextFocus && (editorLangId == stata || resourceExtname == .do || resourceExtname == .ado || resourceExtname == .mata)"
      },
      {
        "command": "stata-workbench.runFile",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus && (editorLangId == stata || resourceExtname == .do || resourceExtname == .ado || resourceExtname == .mata)"
      }
    ],
    "configuration": {
      "title": "Stata MCP",
      "properties": {
        "stataMcp.requestTimeoutMs": {
          "type": "number",
          "default": 45000,
          "description": "Timeout (ms) for MCP requests before showing an error."
        },
        "stataMcp.autoRevealOutput": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show the Stata output channel after runs."
        },
        "stataMcp.runFileWorkingDirectory": {
          "type": "string",
          "default": "",
          "description": "Working directory when running .do files. Supports an absolute path, ~, ${workspaceFolder} or ${fileDir}; empty uses the .do file's folder."
        }
      }
    },
    "languages": [
      {
        "id": "stata",
        "extensions": [
          ".do",
          ".ado",
          ".doh",
          ".mata"
        ],
        "aliases": [
          "Stata",
          "STATA",
          "stata"
        ],
        "configuration": "./src/language_config.json"
      },
      {
        "id": "stata-dyndoc-markdown",
        "extensions": [
          ".domd"
        ],
        "aliases": [
          "Stata Dyndoc Markdown",
          "Stata DOMD"
        ]
      },
      {
        "id": "stata-dyndoc-latex",
        "extensions": [
          ".dotex"
        ],
        "aliases": [
          "Stata Dyndoc LaTeX",
          "Stata DOTEX"
        ]
      }
    ],
    "grammars": [
      {
        "language": "stata",
        "scopeName": "source.stata",
        "path": "./src/grammars/stata.json"
      },
      {
        "scopeName": "source.dyndoc.stata",
        "path": "./src/grammars/stata-dyndoc.json"
      },
      {
        "language": "stata-dyndoc-markdown",
        "scopeName": "source.dyndoc.md.stata",
        "path": "./src/grammars/stata-dyndoc-md.json"
      },
      {
        "language": "stata-dyndoc-latex",
        "scopeName": "source.dyndoc.latex.stata",
        "path": "./src/grammars/stata-dyndoc-latex.json"
      }
    ]
  },
  "scripts": {
    "compile": "node ./build/esbuild.js",
    "bundle": "node ./build/esbuild.js --production",
    "watch": "node ./build/esbuild.js --watch",
    "test": "mocha test/unit/**/*.test.js",
    "test:integration": "MCP_STATA_INTEGRATION=1 node ./test/integration/runTest.js",
    "vscode:prepublish": "npm run bundle",
    "package": "npm run bundle && npx vsce package",
    "package:dist": "npm run bundle && node -e \"require('fs').mkdirSync('dist',{recursive:true});\" && npx vsce package --out dist/stata-workbench-$npm_package_version.vsix",
    "package:zip": "npm pack",
    "publish:ovsx": "npm run bundle && npx ovsx publish -p $OVSX_TOKEN"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": "limited",
      "description": "MCP services require a trusted workspace."
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@vscode/vsce": "^3.7.1"
  },
  "devDependencies": {
    "@vscode/test-electron": "^2.4.0",
    "chai": "^6.2.1",
    "esbuild": "^0.27.1",
    "mocha": "^11.7.5",
    "ovsx": "^0.8.4",
    "proxyquire": "^2.1.3",
    "sinon": "^21.0.0"
  }
}